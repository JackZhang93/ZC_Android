<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="105px"
        android:layout_marginRight="105px"
        android:background="@drawable/dialog_new_shape"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:id="@+id/dialog_title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="39px"
                android:gravity="center"
                android:text="收不到验证码"
                android:textColor="@color/black"
                android:textSize="34px" />

            <LinearLayout
                android:id="@+id/ll_center_container"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="16px"
                android:orientation="vertical"
                android:paddingLeft="35px"
                android:paddingRight="35px">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="5px"
                        android:lineSpacingExtra="5px"
                        android:text="1、"
                        android:textColor="@color/black"
                        android:textSize="28px" />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="5px"
                        android:lineSpacingExtra="5px"
                        android:text="请确认当前是请确认"
                        android:textColor="@color/black"
                        android:textSize="28px" />
                </LinearLayout>
            </LinearLayout>

        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:layout_marginTop="26px"
            android:background="#b6b6b8" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="horizontal">

            <Button
                android:id="@+id/dialog_cancel"
                android:layout_width="0px"
                android:layout_height="88px"
                android:layout_weight="1"
                android:background="@drawable/dialog_btn_select"
                android:paddingBottom="17px"
                android:paddingTop="17px"
                android:text="取消"
                android:textColor="@color/B6B6B8"
                android:textSize="34px" />

            <View
                android:id="@+id/view_center_line"
                android:layout_width="1px"
                android:layout_height="match_parent"
                android:background="#b6b6b8" />

            <Button
                android:id="@+id/dialog_ok"
                android:layout_width="0dp"
                android:layout_height="88px"
                android:layout_weight="1"
                android:background="@drawable/dialog_btn_select"
                android:paddingBottom="17px"
                android:paddingTop="17px"
                android:text="知道了"
                android:textColor="@color/color_007AED"
                android:textSize="34px" />

        </LinearLayout>
    </LinearLayout>
</LinearLayout>