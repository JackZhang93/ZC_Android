<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginTop="@dimen/dimens_11"
    android:paddingLeft="@dimen/dimens_20"
    android:paddingRight="@dimen/dimens_20">

    <android.support.v7.widget.AppCompatTextView
        android:id="@+id/bind_credit_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:minHeight="@dimen/dimens_42"
        android:text="验证手机号"
        android:textSize="@dimen/dimens_30"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent" />

    <android.support.v7.widget.AppCompatTextView
        android:id="@+id/bind_credit_info"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dimens_1.5"
        android:minHeight="@dimen/dimens_20"
        android:text="绑定银行卡需要短信确认，验证码已发送至
手机：186****8369，请按提示操作。"
        android:textSize="@dimen/dimens_14"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/bind_credit_title" />

    <android.support.v7.widget.AppCompatTextView
        android:id="@+id/line1"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dimens_0.5"
        android:layout_marginTop="@dimen/dimens_45.5"
        android:background="#FFE9E9E9"
        app:layout_constraintTop_toBottomOf="@+id/bind_credit_info" />

    <android.support.v7.widget.AppCompatTextView
        android:id="@+id/bind_credit_sms_title"
        android:layout_width="@dimen/dimens_58"
        android:layout_height="@dimen/dimens_60"
        android:gravity="center_vertical"
        android:text="验证码"
        android:textColor="#FF000000"
        android:textSize="@dimen/dimens_19"
        app:layout_constraintTop_toBottomOf="@+id/line1" />

    <android.support.v7.widget.AppCompatEditText
        android:id="@+id/bind_credit_sms"
        style="@style/unsEditText"
        android:layout_width="0dp"
        android:layout_height="@dimen/dimens_60"
        android:layout_marginRight="@dimen/dimens_12"
        android:background="@null"
        android:digits="0123456789"
        android:inputType="number"
        android:singleLine="true"
        android:text="4324"
        android:textColor="#FF000000"
        android:textSize="@dimen/dimens_19"
        app:layout_constraintLeft_toRightOf="@+id/bind_credit_sms_title"
        app:layout_constraintRight_toLeftOf="@+id/check_sms_send"
        app:layout_constraintTop_toBottomOf="@+id/line1" />

    <TextView
        android:id="@+id/check_sms_send"
        android:layout_width="102.5dp"
        android:layout_height="@dimen/dimens_18"
        android:text="重新发送（60）"
        android:textColor="#FF000000"
        android:textSize="@dimen/dimens_14"
        app:layout_constraintBottom_toBottomOf="@+id/line2"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="@+id/line1" />

    <android.support.v7.widget.AppCompatTextView
        android:id="@+id/line2"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dimens_0.5"
        android:background="#FFE9E9E9"
        app:layout_constraintTop_toBottomOf="@+id/bind_credit_sms" />

    <android.support.v7.widget.AppCompatTextView
        android:id="@+id/bind_credit_sms_qua"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:minHeight="@dimen/dimens_22"
        android:text="收不到验证码？"
        android:textColor="#FF007AED"
        android:textSize="@dimen/dimens_15"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/line2" />

    <android.support.v7.widget.AppCompatTextView
        android:id="@+id/check_sms_ok"
        android:layout_width="0dp"
        android:layout_height="@dimen/dimens_44"
        android:layout_marginTop="@dimen/dimens_44"
        android:background="@drawable/shape_default_board"
        android:gravity="center"
        android:text="下一步"
        android:textColor="@android:color/white"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/bind_credit_sms_qua" />
</android.support.constraint.ConstraintLayout>