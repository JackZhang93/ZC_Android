<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginTop="@dimen/dimens_11"
    android:orientation="vertical"
    android:paddingLeft="@dimen/dimens_20"
    android:paddingRight="@dimen/dimens_20">

    <android.support.v7.widget.AppCompatTextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="请输入持卡人本人的银行卡"
        android:textSize="@dimen/dimens_30" />

    <android.support.v7.widget.AppCompatTextView
        android:id="@+id/bind_credit_info"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="1.5dp"
        android:minHeight="@dimen/dimens_20"
        android:text="@string/input_phone"
        android:textSize="@dimen/dimens_14"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/bind_credit_title" />

    <android.support.v7.widget.AppCompatTextView
        android:id="@+id/line1"
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:background="#FFE9E9E9"
        app:layout_constraintTop_toBottomOf="@+id/bind_credit_info" />

    <android.support.v7.widget.AppCompatTextView
        android:id="@+id/bind_credit_card_type_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:minHeight="@dimen/dimens_60"
        android:text="卡类型"
        android:textSize="@dimen/dimens_19"
        app:layout_constraintTop_toBottomOf="@+id/line1" />

    <android.support.v7.widget.AppCompatTextView
        android:id="@+id/bind_credit_card_type_info"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="7dp"
        android:gravity="center_vertical"
        android:minHeight="@dimen/dimens_60"
        android:text="卡类型"
        android:textSize="@dimen/dimens_17"
        app:layout_constraintLeft_toRightOf="@+id/bind_credit_card_type_title"
        app:layout_constraintTop_toTopOf="@+id/bind_credit_card_type_title"
        tools:ignore="RtlHardcoded" />

    <android.support.v7.widget.AppCompatTextView
        android:id="@+id/line2"
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:background="#FFE9E9E9"
        app:layout_constraintTop_toBottomOf="@+id/bind_credit_card_type_info" />

    <android.support.v7.widget.AppCompatTextView
        android:id="@+id/bind_credit_card_time_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:minHeight="@dimen/dimens_60"
        android:text="有效期"
        android:textSize="@dimen/dimens_17"
        app:layout_constraintTop_toBottomOf="@+id/line2" />

    <android.support.v7.widget.AppCompatEditText
        android:id="@+id/bind_credit_card_time_info"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="7dp"
        android:gravity="center_vertical"
        android:hint="选择月份／年份"
        android:minHeight="@dimen/dimens_60"
        android:textSize="@dimen/dimens_19"
        app:layout_constraintLeft_toRightOf="@+id/bind_credit_card_time_title"
        app:layout_constraintRight_toLeftOf="@+id/bind_credit_card_time_info_icon"
        app:layout_constraintTop_toTopOf="@+id/bind_credit_card_time_title"
        tools:ignore="RtlHardcoded" />

    <ImageView
        android:id="@+id/bind_credit_card_time_info_icon"
        android:layout_width="16dp"
        android:layout_height="16dp"
        android:background="@color/colorPrimary"
        app:layout_constraintBottom_toBottomOf="@+id/line3"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="@+id/line2" />

    <android.support.v7.widget.AppCompatTextView
        android:id="@+id/line3"
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:background="#FFE9E9E9"
        app:layout_constraintTop_toBottomOf="@+id/bind_credit_card_time_info" />

    <android.support.v7.widget.AppCompatTextView
        android:id="@+id/bind_credit_card_cvv2_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:minHeight="@dimen/dimens_60"
        android:text="CVV2"
        android:textSize="@dimen/dimens_17"
        app:layout_constraintTop_toBottomOf="@+id/line3" />

    <android.support.v7.widget.AppCompatEditText
        android:id="@+id/bind_credit_card_cvv2__info"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="7dp"
        android:gravity="center_vertical"
        android:hint="卡背面后三位数字的安全码"
        android:minHeight="@dimen/dimens_60"
        android:textSize="@dimen/dimens_19"
        app:layout_constraintLeft_toRightOf="@+id/bind_credit_card_cvv2_title"
        app:layout_constraintRight_toLeftOf="@+id/bind_credit_card_cvv2__info_icon"
        app:layout_constraintTop_toTopOf="@+id/bind_credit_card_cvv2_title"
        tools:ignore="RtlHardcoded" />

    <ImageView
        android:id="@+id/bind_credit_card_cvv2__info_icon"
        android:layout_width="16dp"
        android:layout_height="16dp"
        android:background="@color/colorPrimary"
        app:layout_constraintBottom_toBottomOf="@+id/line4"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="@+id/line3" />

    <android.support.v7.widget.AppCompatTextView
        android:id="@+id/line4"
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:background="#FFE9E9E9"
        app:layout_constraintTop_toBottomOf="@+id/bind_credit_card_cvv2__info" />

    <android.support.v7.widget.AppCompatTextView
        android:id="@+id/bind_credit_card_phone_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:minHeight="@dimen/dimens_60"
        android:text="预留手机号"
        android:textSize="@dimen/dimens_17"
        app:layout_constraintTop_toBottomOf="@+id/line4" />

    <android.support.v7.widget.AppCompatEditText
        android:id="@+id/bind_credit_card_phone_info"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="7dp"
        android:gravity="center_vertical"
        android:hint="请输入银行预留手机号"
        android:minHeight="@dimen/dimens_60"
        android:textSize="@dimen/dimens_19"
        app:layout_constraintLeft_toRightOf="@+id/bind_credit_card_phone_title"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="@+id/bind_credit_card_phone_title"
        tools:ignore="RtlHardcoded" />

    <android.support.v7.widget.AppCompatTextView
        android:id="@+id/line5"
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:background="#FFE9E9E9"
        app:layout_constraintTop_toBottomOf="@+id/bind_credit_card_phone_info" />

    <LinearLayout
        android:id="@+id/bind_credit_accord"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="13.5dp"
        android:minHeight="22dp"
        android:orientation="horizontal"
        app:layout_constraintTop_toBottomOf="@+id/bind_credit_card_phone_info">

        <ImageView
            android:layout_width="11dp"
            android:layout_height="11dp"
            android:layout_gravity="center_vertical" />

        <android.support.v7.widget.AppCompatTextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:text="同意《用户协议》。" />
    </LinearLayout>

    <TextView
        android:id="@+id/bind_credit_ok"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="44dp"
        android:minHeight="44dp"
        app:layout_constraintTop_toBottomOf="@+id/bind_credit_accord" />
</LinearLayout>