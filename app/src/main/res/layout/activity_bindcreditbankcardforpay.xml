<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginTop="@dimen/dimens_11"
    android:paddingLeft="@dimen/dimens_20"
    android:paddingRight="@dimen/dimens_20">

    <android.support.v7.widget.AppCompatTextView
        android:id="@+id/bind_credit_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:minHeight="@dimen/dimens_42"
        android:text="@string/add_credit_bank_card"
        android:textColor="@android:color/black"
        android:textSize="@dimen/dimens_30"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent" />


    <android.support.v7.widget.AppCompatTextView
        android:id="@+id/line1"
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:layout_marginTop="46dp"
        android:background="#FFE9E9E9"
        app:layout_constraintTop_toBottomOf="@+id/bind_credit_title" />


    <android.support.v7.widget.AppCompatTextView
        android:id="@+id/bind_credit_card_time_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:minHeight="@dimen/dimens_60"
        android:text="有效期"
        android:textColor="@android:color/black"
        android:textSize="@dimen/dimens_17"
        app:layout_constraintTop_toBottomOf="@+id/line1" />

    <android.support.v7.widget.AppCompatEditText
        android:id="@+id/bind_credit_card_time_info"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="7dp"
        android:background="@null"
        android:gravity="center_vertical"
        android:hint="选择月份／年份"
        android:longClickable="false"
        android:minHeight="@dimen/dimens_60"
        android:textSize="@dimen/dimens_19"
        app:layout_constraintLeft_toRightOf="@+id/bind_credit_card_time_title"
        app:layout_constraintRight_toLeftOf="@+id/bind_credit_card_time_info_icon"
        app:layout_constraintTop_toTopOf="@+id/bind_credit_card_time_title"
        tools:ignore="RtlHardcoded" />

    <ImageView
        android:id="@+id/bind_credit_card_time_info_icon"
        android:layout_width="16dp"
        android:layout_height="16dp"
        android:background="@color/colorPrimary"
        app:layout_constraintBottom_toBottomOf="@+id/line2"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="@+id/line1" />

    <android.support.v7.widget.AppCompatTextView
        android:id="@+id/line2"
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:background="#FFE9E9E9"
        app:layout_constraintTop_toBottomOf="@+id/bind_credit_card_time_info" />

    <android.support.v7.widget.AppCompatTextView
        android:id="@+id/bind_credit_card_cvv2_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:minHeight="@dimen/dimens_60"
        android:text="CVV2"
        android:textColor="@android:color/black"
        android:textSize="@dimen/dimens_17"
        app:layout_constraintTop_toBottomOf="@+id/line2" />

    <android.support.v7.widget.AppCompatEditText
        android:id="@+id/bind_credit_card_cvv2_info"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="7dp"
        android:background="@null"
        android:gravity="center_vertical"
        android:hint="卡背面后三位数字的安全码"
        android:inputType="number"
        android:longClickable="false"
        android:maxLength="3"
        android:minHeight="@dimen/dimens_60"
        android:textSize="@dimen/dimens_19"
        app:layout_constraintLeft_toRightOf="@+id/bind_credit_card_cvv2_title"
        app:layout_constraintRight_toLeftOf="@+id/bind_credit_card_cvv2_info_icon"
        app:layout_constraintTop_toTopOf="@+id/bind_credit_card_cvv2_title"
        tools:ignore="RtlHardcoded" />

    <ImageView
        android:id="@+id/bind_credit_card_cvv2_info_icon"
        android:layout_width="16dp"
        android:layout_height="16dp"
        android:background="@color/colorPrimary"
        app:layout_constraintBottom_toBottomOf="@+id/line3"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="@+id/line2" />

    <android.support.v7.widget.AppCompatTextView
        android:id="@+id/line3"
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:background="#FFE9E9E9"
        app:layout_constraintTop_toBottomOf="@+id/bind_credit_card_cvv2_info" />

    <LinearLayout
        android:id="@+id/bind_credit_accord"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="13.5dp"
        android:minHeight="22dp"
        android:orientation="horizontal"
        app:layout_constraintTop_toBottomOf="@+id/line3">

        <ImageView
            android:layout_width="11dp"
            android:layout_height="11dp"
            android:layout_gravity="center_vertical" />

        <android.support.v7.widget.AppCompatTextView
            android:id="@+id/bind_credit_accord_info"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:layout_marginStart="5dp" />
    </LinearLayout>

    <TextView
        android:id="@+id/bind_credit_ok"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="44dp"
        android:background="#FF007AED"
        android:minHeight="44dp"
        app:layout_constraintTop_toBottomOf="@+id/bind_credit_accord" />
</android.support.constraint.ConstraintLayout>